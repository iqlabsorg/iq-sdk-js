{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@iqprotocol/abstract-blockchain": ["packages/abstract-blockchain/src"],
      "@iqprotocol/abstract-storage": ["packages/abstract-storage/src"],
      "@iqprotocol/ethereum": ["packages/blockchains/ethereum/src"],
      "@iqprotocol/postgres": ["packages/storages/postgres/src"],
      "$test/*": ["test/*"]
    }
  }
}
