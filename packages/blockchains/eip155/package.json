{
  "name": "@iqprotocol/eip155",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "scripts": {
    "start": "tsdx watch --tsconfig tsconfig.build.json --verbose --noClean",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "tsdx test --group=unit",
    "test:integration": "tsdx test --group=integration",
    "prepublish": "yarn build",
    "postinstall": "run-s typechain:clean typechain:generate",
    "typechain:clean": "rimraf types/contracts",
    "typechain:generate": "typechain --target ethers-v5 --outDir types/contracts './node_modules/@iqprotocol/solidity-contracts/artifacts/contracts/**/*.json'"
  },
  "main": "dist/index.js",
  "module": "dist/eip155.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "@iqprotocol/abstract-blockchain": "0.1.0",
    "eth-sig-util": "^3.0.1",
    "ethers": "^5.1.0"
  },
  "devDependencies": {
    "@iqprotocol/solidity-contracts": "https://github.com/iqalliance/iq-smart-contracts#73473ac4b8ec0eda00dde38306bfc6696d501262",
    "@typechain/ethers-v5": "^6.0.5",
    "hardhat": "^2.2.0",
    "hardhat-deploy": "^0.7.5",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "typechain": "^4.0.3"
  }
}
