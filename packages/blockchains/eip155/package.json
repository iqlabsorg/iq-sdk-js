{
  "name": "@iqprotocol/eip155",
  "version": "0.14.0",
  "license": "UNLICENSED",
  "scripts": {
    "start": "tsdx watch --tsconfig tsconfig.build.json --verbose --noClean",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "tsdx test --group=unit",
    "test:integration": "tsdx test --group=integration",
    "prepublish": "run-s typechain build typechain:types-to-dist",
    "typechain": "run-s typechain:clean typechain:generate",
    "typechain:types-to-dist": "cp src/contracts/*.d.ts dist/contracts",
    "typechain:clean": "rimraf src/contracts",
    "typechain:generate": "typechain --target ethers-v5 --out-dir src/contracts './node_modules/@iqprotocol/solidity-contracts/artifacts/contracts/**/*.json'"
  },
  "main": "dist/index.js",
  "module": "dist/eip155.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "@iqprotocol/abstract-blockchain": "^0.10.0"
  },
  "devDependencies": {
    "@iqprotocol/solidity-contracts": "https://github.com/iqalliance/iq-smart-contracts#0e3fa63cc7cbafe43b40cf575c9906aa31da7954",
    "@typechain/ethers-v5": "^7.0.1",
    "ethers": "^5.4.5",
    "hardhat": "^2.6.1",
    "hardhat-deploy": "^0.8.11",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "typechain": "^5.1.2"
  },
  "peerDependencies": {
    "ethers": "^5.4.5"
  }
}
